generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  username String  @unique
  password String
  Movie    Movie[]
}

model Movie {
  id     Int         @id @default(autoincrement())
  title  String
  year   Int
  poster String
  status watchStatus
  user   User        @relation(fields: [userId], references: [id])
  userId String
}

enum watchStatus {
  watched
  not_watched
}
